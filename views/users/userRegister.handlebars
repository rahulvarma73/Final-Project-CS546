
<h1>Sign-up Page</h1>

<form id="registration-form" action="/register" method="post">
    <label for="userFirstName">First Name: </label>
    <input id="userFirstName" name="userFirstName" type="text">
    <br>
    <label for="userLastName">Last Name: </label>
    <input id="userLastName" name="userLastName" type="text">
    <br>
    <label for="userEmail">Email: </label>
    <input id="userEmail" name="userEmail" type="email">
    <br>
    <label for="userGender">Gender: </label>
    <select id="userGender" name="userGender">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Others">Others</option>
    </select>
    <br>
    <label for="passwordInput">Password: </label>
    <input id="passwordInput" name="passwordInput" type="password">
    <br>
    <button type="submit">Register</button>
</form>

<br>
<button onclick="location.href='/'">Login</button>

{{#if error}}
    <h4>Error: </h4>
    <p class="is-red"> {{error}} </p>
{{/if}}