<h1>Create task </h1><br>
<form
  id="createTask-form" {{!--changes made to the id from createClient-form--}} 
  action="   /tasks/create/{{projectId}}"
  method="POST"
>

  <label for="taskName">Task name: *</label>
  <input
    id="taskName"
    name="taskName"
    type="text"
    value="{{taskName}}"
    required
  >
  <br><br>
  <label for="description">Description: *</label>
  <input
    id="description"
    name="description"
    type="text"
    value="{{description}}"
    required
  >
<br><br>
  <button class="btn btn-info" type="submit">Add Task</button>
</form><br>
<button class="btn btn-warning" onclick="location.href='/tasks/{{projectId}}'"> Back </button>

{{#if error}}
  <h4>Error: </h4>
  <p class="is-red"> {{error}} </p>
{{/if}}


