  onclick="location.href='/tasks/project/{{taskId}}/update'"
>Update Task</button>

<button
  class="btn btn-danger"
  onclick="location.href='/tasks/project/{{taskId}}/delete'"
>Delete Task</button>

<br>
<br>

<form action="/tasks/project/{{taskId}}" method="POST">
  Choose for timer
  <input name="taskName"type="text" hidden="false" value={{taskName}} >
<input name="description"type="text" hidden="false" value={{description}} >
<input name="duration"type="text" hidden="false" value={{duration}} >
<input name="status"type="text" hidden="false" value={{status}} >
<input name="taskId"type="text" hidden="false" value={{taskId}} >
<input name="comment"type="text" hidden="false" value={{comment}} >
<input name="taskEndDate"type="text" hidden="false" value={{taskEndDate}} >

  <button
  class="btn btn-success"
    id="start-button-final"
    onclick="location.href='/tasks/project/{{taskId}}'; myStartFunction();"
    type="submit"
    name="start"
    value="true" 
  >start</button>
  <button
  class="btn btn-warning"
    id="stop-button-final"
    onclick="location.href='/tasks/project/{{taskId}}'; myStopFunction();"
    type="submit"
    name="stop"
    value="true"
  >stop</button>
  <button
    class="btn btn-danger"
    id="finish-button-final"
    onclick="location.href='/tasks/project/{{taskId}}'; myFinishFunction();"
    type="submit"
    name="finish"
    value="true"
  >finish</button>
</form>
<br>
