<form action="/tasks/project/{{taskId}}" method="POST">
  Choose for timer
<input name="taskName"type="text" hidden="false" value={{taskName}} >
<input name="description"type="text" hidden="false" value={{description}} >
<input name="duration"type="text" hidden="false" value={{duration}} >
<input name="status"type="text" hidden="false" value={{status}} >
<input name="taskId"type="text" hidden="false" value={{taskId}} >

  <button
    id="start"
    onclick="location.href='/tasks/project/{{taskId}}'"
    type="submit"
    name="start"
    value="true" 
  >start</button>
  <button
    onclick="location.href='/tasks/project/{{taskId}}'"
    type="submit"
    name="stop"
    value="true"
  >stop</button>
  <button
    onclick="location.href='/tasks/project/{{taskId}}'"
    type="submit"
    name="finish"
    value="true"
  >finish</button>
</form>

{{#if error}}
  <h4>Error: </h4>
  <p class="is-red"> {{error}} </p>
{{/if}}