<h1>Task Details</h1>
<dl>
  <dt>Task Name: </dt>
  <dd>{{taskName}}</dd>
  <dt>Task Description: </dt>
  <dd>{{description}}</dd>
  <dt>Duration: </dt>
  <dd>{{duration}}</dd>
  <dt>Status: </dt>
  <dd>{{status}}</dd>
  {{#if taskEndDate}}
  <dt>End date: <dt>
  <dd> {{taskEndDate}} <dd>
  {{/if}}
